<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="CustomShapeOverlay">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopLeft">0dp</item>
        <item name="cornerSizeTopRight">30dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
        <item name="cornerSizeBottomLeft">30dp</item>
    </style>

    <style name="BaseToolBar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minHeight">?attr/actionBarSize</item>
        <item name="android:layout_marginTop">32dp</item>
        <item name="android:background">?attr/colorPrimary</item>
        <item name="titleTextColor">?attr/colorOnPrimary</item>
        <item name="placeholderText">Search</item>
        <item name="subtitleTextColor">?attr/colorOnPrimary</item>
    </style>

    <style name="AppSearchView" parent="Widget.AppCompat.SearchView">
        <!-- Query Text Color -->
        <item name="android:textColorPrimary">?attr/colorOnPrimary</item>
        <!-- Hint Color -->
        <item name="android:textColorHint">?attr/colorOnPrimary</item>
        <!-- Icon Color -->
        <item name="android:tint">?attr/colorOnPrimary</item>
    </style>

    <style name="CardChip" parent="Widget.MaterialComponents.Chip.Entry">
        <item name="checkedIcon">@drawable/ic_circle</item>
        <item name="chipIconSize">8dp</item>
        <item name="iconStartPadding">4dp</item>
        <item name="checkedIconTint">?attr/colorPrimary</item>
        <item name="chipStrokeWidth">1dp</item>
        <item name="android:textColor">@color/chip_card_text</item>
        <item name="chipStrokeColor">@color/white</item>
        <item name="chipBackgroundColor">@color/chip_card</item>
        <item name="closeIconVisible">false</item>
    </style>

    <style name="TimeChip">
        <item name="checkedIconVisible">false</item>
        <item name="android:checkable">true</item>
        <item name="chipStrokeWidth">1dp</item>
        <item name="android:textStyle">bold</item>
        <item name="chipBackgroundColor">@android:color/transparent</item>
        <item name="chipStrokeColor">@color/chip_operations_time</item>
    </style>

    <style name="ShapeAppearanceOverlay_card_custom_corners" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">20dp</item>
        <item name="cornerSizeTopLeft">20dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
    </style>

    <style name="Widget.MaterialComponents.BottomSheet.DragHandle" parent="Widget.Material3.BottomSheet.DragHandle">
        <item name="tint">?colorOnSurface</item>
    </style>

    <style name="ShapeAppearanceOverlay.Recent" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">25%</item>
    </style>

    <style name="ShapeAppearanceOverlay.Profile" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="BottomBarFab" parent="Widget.MaterialComponents.FloatingActionButton">
        <item name="cornerSize">36%</item>
        <item name="cornerFamily">cut</item>
    </style>

    <style name="DividerStyle">
        <item name="lineHeight">@dimen/divider_height</item>
        <item name="progressColor">?attr/colorOnSurface</item>
        <item name="backgroundColor">?attr/colorSurfaceDim</item>
        <item name="progress">4dp</item>
        <item name="android:alpha">0.5</item>
    </style>

    <style name="AppTitle" parent="TextAppearance.AppCompat.Title">
        <item name="android:textSize">@dimen/title_text_size</item>
        <item name="android:letterSpacing">0.7</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Heading1" parent="TextAppearance.AppCompat.Title">
        <item name="android:textSize">@dimen/heading1_text_size</item>
    </style>

    <style name="Heading2" parent="TextAppearance.AppCompat.Title">
        <item name="android:textSize">@dimen/heading2_text_size</item>
    </style>

    <style name="Subtitle1" parent="TextAppearance.MaterialComponents.Subtitle1">
        <item name="android:textSize">@dimen/body2_text_size</item>
        <item name="textAllCaps">true</item>
    </style>

    <style name="Subtitle2" parent="TextAppearance.MaterialComponents.Subtitle2">
        <item name="android:textSize">@dimen/body2_text_size</item>
        <item name="textAllCaps">true</item>
        <item name="android:textColor">?android:attr/textColorSecondary</item>
    </style>

    <style name="Body1" parent="TextAppearance.AppCompat.Body1">
        <item name="android:textSize">@dimen/body1_text_size</item>
        <item name="textAllCaps">true</item>
    </style>

    <style name="Body2" parent="TextAppearance.AppCompat.Body2">
        <item name="android:textSize">@dimen/body2_text_size</item>
        <item name="textAllCaps">true</item>
        <item name="android:textColor">?android:attr/textColorSecondary</item>
    </style>

    <style name="ChipTextStyle" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:textSize">@dimen/subtitle_text_size</item>
    </style>

    <style name="StackExchangeChip" parent="Widget.MaterialComponents.Chip.Choice">
        <item name="checkedIconVisible">false</item>
        <item name="android:textStyle">bold</item>
        <item name="android:checkable">true</item>
        <item name="chipCornerRadius">@dimen/corner_radius</item>
        <item name="chipBackgroundColor">@color/stack_exchange_chip_background</item>
    </style>

    <style name="StackExchangeCompanyChip" parent="Widget.MaterialComponents.Chip.Action">
        <item name="chipIconEnabled">true</item>
        <item name="chipIconVisible">true</item>
        <item name="android:textStyle">bold</item>
        <item name="chipCornerRadius">@dimen/corner_radius</item>
    </style>

    <style name="CardStyle" parent="Widget.MaterialComponents.CardView">
        <item name="cardCornerRadius">@dimen/corner_radius</item>
    </style>

<!--    GitHub Client-->
    <style name="GitHubSearchView" parent="@style/Widget.AppCompat.SearchView">
        <item name="searchHintIcon">@null</item>
        <item name="searchIcon">@drawable/ic_search</item>
    </style>

    <style name="ShapeAppearanceOverlay.GithubItem" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">15%</item>
    </style>
    
    <style name="GithubToolbarPrimary" >
        <item name="android:background">?attr/colorPrimary</item>
        <item name="colorOnPrimary">?attr/colorAccent</item>
        <item name="iconTint">?attr/colorAccent</item>
    </style>

    <style name="GithubTextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox" >
        <item name="hintTextColor">?android:attr/textColorPrimary</item>
        <item name="boxStrokeColor">@color/selector_text_input_layout</item>
        <item name="android:textCursorDrawable">?android:attr/textColorPrimary</item>
    </style>

    <style name="AlertPrimary" parent="ThemeOverlay.MaterialComponents.Dialog.Alert">
        <item name="buttonBarPositiveButtonStyle">@style/PositiveButtonStyle</item>
    </style>

    <style name="PositiveButtonStyle" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">?android:attr/textColorPrimary</item>
    </style>
</resources>