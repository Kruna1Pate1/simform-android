<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".uicomponents.ThemeFragment">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbarTheme"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:background="?attr/colorPrimary"
        android:theme="@style/AppSearchView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:menu="@menu/theme_toolbar_menu"
        app:title="Select Theme"
        app:titleTextColor="?attr/colorOnPrimary" />

    <GridView
        android:id="@+id/gvTheme"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dp_16"
        android:layout_marginTop="24dp"
        android:choiceMode="singleChoice"
        android:drawSelectorOnTop="true"
        android:horizontalSpacing="16dp"
        android:listSelector="@drawable/selected_theme"
        android:numColumns="3"
        android:verticalSpacing="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/toolbarTheme" />

</androidx.constraintlayout.widget.ConstraintLayout>