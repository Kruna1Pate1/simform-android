<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="videoDetail"
            type="com.krunal.demo.recyclerview.models.VideoDetails" />
    </data>
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imgViewThumbnail"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintDimensionRatio="16:9"
        tools:src="@drawable/running_up_that_hill"
        android:src="@{ videoDetail.thumbnail }"
        android:contentDescription="@{ videoDetail.title }"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/imgViewProfile"
        android:layout_width="38dp"
        android:layout_height="38dp"
        app:layout_constraintTop_toBottomOf="@id/imgViewThumbnail"
        app:layout_constraintStart_toStartOf="parent"
        tools:src="@drawable/netflix_logo"
        android:scaleType="centerCrop"
        app:shapeAppearance="@style/ShapeAppearanceOverlay.Profile"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"/>

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/imgViewProfile"
        app:layout_constraintTop_toTopOf="@id/imgViewProfile"
        android:layout_marginStart="16dp"
        android:textAppearance="@style/TextAppearance.MaterialComponents.Subtitle2"
        android:maxLines="2"
        android:ellipsize="end"
        tools:text="Running Up That Hill (Kate Bush)"/>


    <TextView
        android:id="@+id/tvVideoInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/imgViewProfile"
        app:layout_constraintTop_toBottomOf="@id/tvTitle"
        android:layout_marginStart="16dp"
        android:textColor="@android:color/darker_gray"
        android:textSize="12sp"
        android:maxLines="2"
        android:ellipsize="end"
        android:text="@{ @string/video_info(videoDetail.author, videoDetail.views, videoDetail.uploadDate) }"
        tools:text="Netflix • 2.5M views • 11 months ago"/>

    <ImageButton
        android:layout_width="24dp"
        android:layout_height="24dp"
        app:layout_constraintTop_toTopOf="@id/imgViewProfile"
        app:layout_constraintEnd_toEndOf="parent"
        android:src="@drawable/ic_action_more"
        android:background="@android:color/transparent"
        android:layout_marginEnd="16dp"
        app:tint="?attr/colorOnBackground" />


</androidx.constraintlayout.widget.ConstraintLayout>
</layout>