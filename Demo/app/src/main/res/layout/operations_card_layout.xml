<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardBackgroundColor="?attr/colorSurface"
        app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay_card_custom_corners">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/dp_36"
            android:padding="@dimen/dp_16">

            <TextView
                android:id="@+id/tvOperations"
                style="@style/TextAppearance.MaterialComponents.Headline5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/operations"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <Button
                android:id="@+id/btnDetails"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:drawableEnd="@drawable/ic_right_arrow"
                android:drawableTint="?attr/colorPrimary"
                android:text="@string/see_details"
                android:textAllCaps="false"
                android:textColor="?attr/colorPrimary"
                app:layout_constraintBottom_toBottomOf="@id/tvOperations"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/tvOperations" />

            <com.google.android.material.chip.ChipGroup
                android:id="@+id/cgTime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_24"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tvOperations"
                app:selectionRequired="true"
                app:singleSelection="true">

                <com.google.android.material.chip.Chip
                    android:id="@+id/chipDay"
                    style="@style/TimeChip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/day" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/chipWeek"
                    style="@style/TimeChip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    android:text="@string/week" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/chipMonth"
                    style="@style/TimeChip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/month" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/chipYear"
                    style="@style/TimeChip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/year" />
            </com.google.android.material.chip.ChipGroup>

            <ImageButton
                android:id="@+id/btnCalendar"
                android:layout_width="34dp"
                android:layout_height="@dimen/dp_0"
                android:background="@android:color/transparent"
                android:src="@drawable/ic_calendar"
                app:layout_constraintDimensionRatio="1:1"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/cgTime"
                app:tint="?attr/colorOnBackground" />

            <TextView
                android:id="@+id/tvIncomeValue"
                style="@style/TextAppearance.MaterialComponents.Headline6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_24"
                android:text="$1,298"
                android:textColor="?attr/colorOnBackground"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/cgTime" />

            <TextView
                android:id="@+id/tvIncome"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/income"
                android:textColor="?attr/colorPrimary"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tvIncomeValue" />

            <TextView
                android:id="@+id/tvChargesValue"
                style="@style/TextAppearance.MaterialComponents.Headline6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_24"
                android:text="$828"
                android:textColor="?attr/colorOnBackground"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tvIncome" />

            <TextView
                android:id="@+id/tvCharges"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/charges"
                android:textColor="?attr/colorSecondary"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tvChargesValue" />

            <LinearLayout
                android:id="@+id/llGraph"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_100"
                android:layout_marginStart="@dimen/dp_20"
                android:orientation="horizontal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/barrier"
                app:layout_constraintTop_toTopOf="@id/tvIncomeValue">

                <ProgressBar
                    android:id="@+id/pb1"
                    style="@android:style/Widget.ProgressBar.Horizontal"
                    android:layout_width="@dimen/dp_10"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_horizontal"
                    android:progress="90"
                    android:progressDrawable="@drawable/progress_vertical_graph" />

                <ProgressBar
                    android:id="@+id/pb2"
                    style="@android:style/Widget.ProgressBar.Horizontal"
                    android:layout_width="@dimen/dp_10"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginStart="@dimen/dp_20"
                    android:progress="70"
                    android:progressDrawable="@drawable/progress_vertical_graph" />

                <ProgressBar
                    android:id="@+id/pb3"
                    style="@android:style/Widget.ProgressBar.Horizontal"
                    android:layout_width="@dimen/dp_10"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginStart="@dimen/dp_20"
                    android:progress="20"
                    android:progressDrawable="@drawable/progress_vertical_graph" />

                <ProgressBar
                    android:id="@+id/pb4"
                    style="@android:style/Widget.ProgressBar.Horizontal"
                    android:layout_width="@dimen/dp_10"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginStart="@dimen/dp_20"
                    android:progress="20"
                    android:progressDrawable="@drawable/progress_vertical_graph" />

                <ProgressBar
                    android:id="@+id/pb5"
                    style="@android:style/Widget.ProgressBar.Horizontal"
                    android:layout_width="@dimen/dp_10"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginStart="@dimen/dp_20"
                    android:progress="50"
                    android:progressDrawable="@drawable/progress_vertical_graph" />

                <ProgressBar
                    android:id="@+id/pb6"
                    style="@android:style/Widget.ProgressBar.Horizontal"
                    android:layout_width="@dimen/dp_10"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginStart="@dimen/dp_20"
                    android:progress="10"
                    android:progressDrawable="@drawable/progress_vertical_graph" />

                <ProgressBar
                    android:id="@+id/pb7"
                    style="@android:style/Widget.ProgressBar.Horizontal"
                    android:layout_width="@dimen/dp_10"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginStart="@dimen/dp_20"
                    android:progress="100"
                    android:progressDrawable="@drawable/progress_vertical_graph" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/llGraphDown"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_100"
                android:layout_marginStart="@dimen/dp_20"
                android:layout_marginTop="@dimen/dp_10"
                android:orientation="horizontal"
                android:rotationX="180"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/barrier"
                app:layout_constraintTop_toBottomOf="@id/llGraph">

                <ProgressBar
                    android:id="@+id/pbDown1"
                    style="@android:style/Widget.ProgressBar.Horizontal"
                    android:layout_width="@dimen/dp_10"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_horizontal"
                    android:progress="10"
                    android:progressDrawable="@drawable/progress_vertical_graph"
                    android:progressTint="?attr/colorSecondary" />

                <ProgressBar
                    android:id="@+id/pbDown2"
                    style="@android:style/Widget.ProgressBar.Horizontal"
                    android:layout_width="@dimen/dp_10"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginStart="@dimen/dp_20"
                    android:progress="60"
                    android:progressDrawable="@drawable/progress_vertical_graph"
                    android:progressTint="?attr/colorSecondary" />

                <ProgressBar
                    android:id="@+id/pbDown3"
                    style="@android:style/Widget.ProgressBar.Horizontal"
                    android:layout_width="@dimen/dp_10"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginStart="@dimen/dp_20"
                    android:progress="40"
                    android:progressDrawable="@drawable/progress_vertical_graph"
                    android:progressTint="?attr/colorSecondary" />

                <ProgressBar
                    android:id="@+id/pbDown4"
                    style="@android:style/Widget.ProgressBar.Horizontal"
                    android:layout_width="@dimen/dp_10"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginStart="@dimen/dp_20"
                    android:progress="100"
                    android:progressDrawable="@drawable/progress_vertical_graph"
                    android:progressTint="?attr/colorSecondary" />

                <ProgressBar
                    android:id="@+id/pbDown5"
                    style="@android:style/Widget.ProgressBar.Horizontal"
                    android:layout_width="@dimen/dp_10"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginStart="@dimen/dp_20"
                    android:progress="30"
                    android:progressDrawable="@drawable/progress_vertical_graph"
                    android:progressTint="?attr/colorSecondary" />

                <ProgressBar
                    android:id="@+id/pbDown6"
                    style="@android:style/Widget.ProgressBar.Horizontal"
                    android:layout_width="@dimen/dp_10"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginStart="@dimen/dp_20"
                    android:progress="20"
                    android:progressDrawable="@drawable/progress_vertical_graph"
                    android:progressTint="?attr/colorSecondary" />

                <ProgressBar
                    android:id="@+id/pbDown7"
                    style="@android:style/Widget.ProgressBar.Horizontal"
                    android:layout_width="@dimen/dp_10"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginStart="@dimen/dp_20"
                    android:progress="40"
                    android:progressDrawable="@drawable/progress_vertical_graph"
                    android:progressTint="?attr/colorSecondary" />
            </LinearLayout>


            <androidx.constraintlayout.widget.Barrier
                android:id="@+id/barrier"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:barrierDirection="end"
                app:constraint_referenced_ids="tvIncomeValue, tvIncome, tvChargesValue, tvCharges" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.google.android.material.card.MaterialCardView>
</layout>