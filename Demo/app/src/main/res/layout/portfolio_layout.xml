<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="com.krunal.demo.R" />

        <variable
            name="shareDetails"
            type="com.krunal.demo.stackexchange.models.ShareDetails" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/imgViewLogo"
            android:layout_width="50dp"
            android:layout_height="0dp"
            android:background="@drawable/rounded_image"
            android:contentDescription="@{ shareDetails.name }"
            android:cropToPadding="true"
            android:padding="10dp"
            android:scaleType="fitXY"
            app:drawableResource="@{ shareDetails.logo }"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:tint="?attr/colorOnPrimaryContainer"
            tools:src="@drawable/ic_avax_logo" />

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/sub_divider_margin"
            android:text="@{ shareDetails.name }"
            android:textAppearance="@style/Body1"
            app:layout_constraintBottom_toTopOf="@id/tvSubTitle"
            app:layout_constraintStart_toEndOf="@id/imgViewLogo"
            app:layout_constraintTop_toTopOf="@id/imgViewLogo"
            app:layout_constraintVertical_chainStyle="packed"
            tools:text="Avax" />

        <TextView
            android:id="@+id/tvSubTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/sub_divider_margin"
            android:text="@{ shareDetails.parentName }"
            android:textAppearance="@style/Subtitle2"
            app:layout_constraintBottom_toBottomOf="@id/imgViewLogo"
            app:layout_constraintStart_toStartOf="@id/tvTitle"
            app:layout_constraintTop_toBottomOf="@id/tvTitle"
            tools:text="Avalanche" />

        <ImageView
            android:id="@+id/imgViewGraph"
            android:layout_width="90dp"
            android:layout_height="0dp"
            android:layout_marginVertical="6dp"
            android:src="@drawable/trade_graph"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.65"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <TextView
            android:id="@+id/tvValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/sub_divider_margin"
            android:text="@{ shareDetails.value }"
            android:textAppearance="@style/Body1"
            app:layout_constraintBottom_toTopOf="@id/tvAmountDiff"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/imgViewLogo"
            app:layout_constraintVertical_chainStyle="packed"
            tools:text="47,38662" />

        <TextView
            android:id="@+id/tvAmountDiff"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/sub_divider_margin"
            android:text="@{ @string/euro_amount(shareDetails.amountDiff) }"
            android:textAppearance="@style/Body2"
            app:layout_constraintBottom_toBottomOf="@id/imgViewLogo"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvValue"
            app:textColorResource="@{ shareDetails.isPositive ? R.color.stack_exchange_theme_dark_green : R.color.stack_exchange_theme_dark_red}"
            tools:text="â‚¬ 47,38662"
            tools:textColor="@color/stack_exchange_theme_dark_green" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>